
# > ~ Define CSkyTester directory

TESTER_DIR = ../src

# > ~ Define project sources

SRCS = ./src/example.c

# > ~ Define tests directory (All .c files will be used as tests)

TEST_DIR = ./test

# > ~ Call CSkyTester's Makefile

test:
	$(MAKE) -C $(TESTER_DIR) PROJ_SRCS="$(SRCS)" TESTS_DIR="$(TEST_DIR)"
